<Window x:Class="PokerPuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerPuzzle"
        xmlns:MyView="clr-namespace:PokerPuzzle.View"
        xmlns:VM="clr-namespace:PokerPuzzle.VM"
        mc:Ignorable="d"
        Title="Poker Puzzle" WindowState="Maximized" d:DesignHeight="1200" d:DesignWidth="1800" Background="SlateGray">
    <Window.DataContext>
        <VM:GameVM/>
    </Window.DataContext>
    <Viewbox Stretch="Uniform">
        <Canvas Width="1800" Height="1200">
            <Canvas.Background>
                <ImageBrush ImageSource="/Ressources/table.png"/>
            </Canvas.Background>

            <!--COMMUNITY CARDS-->
            <MyView:CommunityCards Canvas.Top="470" Canvas.Left="370" DataContext="{Binding CommunityCards}"/>

            <!--PLAYER HANDS-->
            <MyView:PlayerHand Canvas.Left="1490" Canvas.Top="299" DataContext="{Binding Players[8]}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <MyView:PlayerHand Canvas.Left="1490" Canvas.Top="675" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[0]}"/>
            <MyView:PlayerHand Canvas.Left="1145" Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[1]}"/>
            <MyView:PlayerHand Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[2]}" Canvas.Left="797"/>
            <MyView:PlayerHand Canvas.Left="421" Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[3]}"/>
            <MyView:PlayerHand Canvas.Left="65" Canvas.Top="668" HorizontalAlignment="Center" VerticalAlignment="Top" DataContext="{Binding Players[4]}"/>
            <MyView:PlayerHand Canvas.Left="70" Canvas.Top="299" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[5]}"/>
            <MyView:PlayerHand Canvas.Left="467" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[6]}"/>
            <MyView:PlayerHand Canvas.Left="1033" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[7]}"/>
            <Image x:Name="Button" Source="pack://application:,,,/Ressources/button.png" Height="68" Width="70" Canvas.Top="313" Canvas.Left="1332"/>

            <Grid x:Name="GameStateControlGrid"  Canvas.Left="1450" Canvas.Top="1041" Background="Red" Height="150" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="PreflopButton" Content="Preflop" Command="{Binding PreflopCommand}"/>
                <Button x:Name="FlopButton" Content="Flop" Grid.Column="1" Command="{Binding FlopCommand}"/>
                <Button x:Name="TurnButton" Content="Turn" Grid.Column="2" Command="{Binding TurnCommand}"/>
                <Button x:Name="RiverButton" Content="River" Grid.Column="3" Command="{Binding RiverCommand}"/>
                <Button x:Name="ShowdownButton" Content="Showdown" Grid.Column="4" Command="{Binding ShowdownCommand}"/>

                <Button x:Name="PreviousStateButton" Content="&lt;&lt;" Grid.Row="1" Grid.Column="0"/>
                <Button x:Name="PreviousActionButton" Content="&lt;" Grid.Row="1" Grid.Column="1" Command="{Binding PreviousActionCommand}"/>

                <Button x:Name="NextActionButton" Content=">" Grid.Row="1" Grid.Column="3" Command="{Binding NextActionCommand}"/>
                <Button x:Name="NextStateButton" Content=">>" Grid.Row="1" Grid.Column="4"/>
            </Grid>
        </Canvas>
    </Viewbox>
</Window>
