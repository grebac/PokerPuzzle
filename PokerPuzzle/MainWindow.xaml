<Window x:Class="PokerPuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerPuzzle"
        xmlns:MyView="clr-namespace:PokerPuzzle.View"
        xmlns:VM="clr-namespace:PokerPuzzle.VM"
        xmlns:enums="clr-namespace:PokerPuzzleData.Enum;assembly=PokerPuzzleData"
        mc:Ignorable="d"
        Title="Poker Puzzle" WindowState="Maximized" d:DesignHeight="1200" d:DesignWidth="1800" Background="SlateGray">
    <Window.DataContext>
        <VM:GameVM/>
    </Window.DataContext>
    <Viewbox Stretch="Uniform">
        <Canvas Width="1800" Height="1200">
            <Canvas.Background>
                <ImageBrush ImageSource="/Ressources/table.png"/>
            </Canvas.Background>

            <!--Random Game Accessor-->
            <Border Background="#FF2E2E2E" BorderBrush="#FFB88600" BorderThickness="1" CornerRadius="6" Padding="12,8" HorizontalAlignment="Left" Canvas.Left="1568" Canvas.Top="71" VerticalAlignment="Center">
                <Button Content="Random Game" Background="#FF2E2E2E" Foreground="White" FontSize="18" FontWeight="SemiBold" BorderBrush="#FF444444" BorderThickness="1" Padding="12,8"  Command="{Binding RandomGame}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Background="#FF2E2E2E" BorderBrush="#FFB88600" BorderThickness="1" CornerRadius="6" Padding="12,8" HorizontalAlignment="Left" Canvas.Left="1560" Canvas.Top="24">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" FontSize="18" FontWeight="Bold" Text="Game ID: " HorizontalAlignment="Center"/>
                    <TextBlock x:Name="GameIdTextBlock" Foreground="White" FontSize="18" FontWeight="Bold" Text="{Binding GameId}" HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>

            <!--COMMUNITY CARDS-->
            <MyView:CommunityCards Canvas.Top="470" Canvas.Left="370" DataContext="{Binding CommunityCards}"/>

            <!--PLAYER HANDS-->
            <MyView:PlayerHand Canvas.Left="1490" Canvas.Top="299" DataContext="{Binding Players[8]}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <MyView:PlayerHand Canvas.Left="1490" Canvas.Top="675" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[0]}"/>
            <MyView:PlayerHand Canvas.Left="1145" Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[1]}"/>
            <MyView:PlayerHand Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[2]}" Canvas.Left="797"/>
            <MyView:PlayerHand Canvas.Left="421" Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[3]}"/>
            <MyView:PlayerHand Canvas.Left="65" Canvas.Top="668" HorizontalAlignment="Center" VerticalAlignment="Top" DataContext="{Binding Players[4]}"/>
            <MyView:PlayerHand Canvas.Left="70" Canvas.Top="299" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[5]}"/>
            <MyView:PlayerHand Canvas.Left="467" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[6]}"/>
            <MyView:PlayerHand Canvas.Left="1033" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[7]}"/>
            <Image x:Name="Button" Source="pack://application:,,,/Ressources/button.png" Height="68" Width="70" Canvas.Top="313" Canvas.Left="1332"/>

            <Grid x:Name="GameStateControlGrid" Canvas.Left="1450" Canvas.Top="1041" Height="150" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <Style x:Key="StreetButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Foreground" Value="#E8D4A0"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>

                    <Style x:Key="NavigationButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="#1B4D1B"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="BorderBrush" Value="#8B7355"/>
                        <Setter Property="BorderThickness" Value="1.5"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>

                    <Style x:Key="PlayButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                        <Setter Property="Background" Value="#2D5A2D"/>
                    </Style>
                </Grid.Resources>

                <Button x:Name="PreflopButton" Content="Preflop" Style="{StaticResource StreetButtonStyle}" Command="{Binding PreflopCommand}" CommandParameter="{x:Static enums:StreetEnum.Preflop}"/>
                <Button x:Name="FlopButton" Content="Flop"  Grid.Column="1" Style="{StaticResource StreetButtonStyle}" Command="{Binding FlopCommand}" CommandParameter="{x:Static enums:StreetEnum.Flop}"/>
                <Button x:Name="TurnButton" Content="Turn" Grid.Column="2" Style="{StaticResource StreetButtonStyle}" Command="{Binding TurnCommand}" CommandParameter="{x:Static enums:StreetEnum.Turn}"/>
                <Button x:Name="RiverButton" Content="River"  Grid.Column="3" Style="{StaticResource StreetButtonStyle}" Command="{Binding RiverCommand}" CommandParameter="{x:Static enums:StreetEnum.River}"/>
                <Button x:Name="ShowdownButton" Content="Showdown" Grid.Column="4" Style="{StaticResource StreetButtonStyle}" Command="{Binding ShowdownCommand}" CommandParameter="{x:Static enums:StreetEnum.Showdown}"/>

                <Button x:Name="PreviousStateButton" Content="⏮" Grid.Row="1" Grid.Column="0" Style="{StaticResource NavigationButtonStyle}" Command="{Binding PreviousStreetCommand}"/>
                <Button x:Name="PreviousActionButton" Content="◀" Grid.Row="1" Grid.Column="1" Style="{StaticResource NavigationButtonStyle}" Command="{Binding PreviousActionCommand}"/>
                <Button x:Name="PlayPauseButton" Content="▶" Grid.Row="1" Grid.Column="2" Style="{StaticResource PlayButtonStyle}" Visibility="Hidden"/>
                <Button x:Name="NextActionButton" Content="▶" Grid.Row="1" Grid.Column="3" Style="{StaticResource NavigationButtonStyle}" Command="{Binding NextActionCommand}"/>
                <Button x:Name="NextStateButton" Content="⏭" Grid.Row="1" Grid.Column="4" Style="{StaticResource NavigationButtonStyle}" Command="{Binding NextStreetCommand}"/>
            </Grid>
        </Canvas>
    </Viewbox>
</Window>
