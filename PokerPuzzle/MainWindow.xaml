<Window x:Class="PokerPuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerPuzzle"
        xmlns:MyView="clr-namespace:PokerPuzzle.View"
        xmlns:VM="clr-namespace:PokerPuzzle.VM"
        xmlns:enums="clr-namespace:PokerPuzzleData.Enum;assembly=PokerPuzzleData"
        mc:Ignorable="d"
        Title="Poker Puzzle" WindowState="Maximized" d:DesignHeight="1200" d:DesignWidth="1800" Background="#1E1E1E">
    <Window.DataContext>
        <VM:GameVM/>
    </Window.DataContext>

    <Viewbox Stretch="Uniform">
        <Canvas Width="1800" Height="1200">
            <Canvas.Background>
                <ImageBrush ImageSource="pack://application:,,,/Ressources/table.png"/>
            </Canvas.Background>

            <!--Database Settings-->
            <Border Background="#FF2E2E2E" BorderBrush="#FFB88600" BorderThickness="1" CornerRadius="6" Canvas.Left="35" Canvas.Top="5" Height="30" Width="50">
                <Menu Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <MenuItem Header="⚙" Foreground="White" FontSize="20" Padding="0" 
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <MenuItem Header="Import Data" Command="{Binding OpenImportDatabase}" Background="#2D2D2D" Foreground="White"/>
                        <Separator Background="#444"/>
                        <MenuItem Header="Delete Database" Command="{Binding DeleteDatabase}" Background="#2D2D2D" Foreground="#FF6B6B"/>
                    </MenuItem>
                </Menu>
            </Border>

            <!--Random Game Accessor-->
            <Border Background="#FF2E2E2E" BorderBrush="#FFB88600" BorderThickness="1" CornerRadius="6" Padding="12,8" HorizontalAlignment="Center" Canvas.Left="1568" Canvas.Top="85" VerticalAlignment="Top" Height="58">
                <Button Content="Random Game" Background="#FF2E2E2E" Foreground="White" FontSize="18" FontWeight="SemiBold" BorderBrush="#FF444444" BorderThickness="1" Padding="12,8"  Command="{Binding RandomGame}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Background="#FF2E2E2E" BorderBrush="#FFB88600" BorderThickness="1" CornerRadius="6" Padding="12,8" HorizontalAlignment="Left" Canvas.Left="1568" Canvas.Top="27" VerticalAlignment="Top" Height="51" Width="173">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" FontSize="18" FontWeight="Bold" Text="Game ID: " HorizontalAlignment="Center"/>
                    <TextBlock x:Name="GameIdTextBlock" Foreground="White" FontSize="18" FontWeight="Bold" Text="{Binding GameId}" HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>

            <!-- Favorite Games -->
            <Border Background="#FF2E2E2E" BorderBrush="#FFB88600" BorderThickness="1" CornerRadius="6" Canvas.Left="90" Canvas.Top="5" Height="30" Width="50">
                <Menu Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <MenuItem Header="★" Foreground="Gold" FontSize="18" Padding="0" VerticalContentAlignment="Center">
                        <MenuItem Header="Add to Favorites" Command="{Binding AddToFavorties}" Background="#2D2D2D" Foreground="White"/>
                        <MenuItem Header="My Favorites" Command="{Binding OpenFavorites}" Background="#2D2D2D" Foreground="White"/>
                    </MenuItem>
                </Menu>
            </Border>
            
            <!--COMMUNITY CARDS-->
            <MyView:CommunityCards Canvas.Top="470" Canvas.Left="370" DataContext="{Binding CommunityCards}"/>

            <!--PLAYER HANDS-->
            <MyView:PlayerHand Canvas.Left="1490" Canvas.Top="299" DataContext="{Binding Players[0]}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <MyView:PlayerHand Canvas.Left="1490" Canvas.Top="675" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[1]}"/>
            <MyView:PlayerHand Canvas.Left="1145" Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[2]}"/>
            <MyView:PlayerHand Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="797" DataContext="{Binding Players[3]}"/>
            <MyView:PlayerHand Canvas.Left="421" Canvas.Top="854" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[4]}"/>
            <MyView:PlayerHand Canvas.Left="65" Canvas.Top="668" HorizontalAlignment="Center" VerticalAlignment="Top" DataContext="{Binding Players[5]}"/>
            <MyView:PlayerHand Canvas.Left="70" Canvas.Top="299" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Players[6]}"/>
            <MyView:PlayerHand Canvas.Left="421" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[7]}"/>
            <MyView:PlayerHand Canvas.Left="797" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[8]}"/>
            <MyView:PlayerHand Canvas.Left="1145" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" DataContext="{Binding Players[9]}"/>
            <Image x:Name="SB" Source="pack://application:,,,/Ressources/SB.png" Height="68" Width="70" Canvas.Top="474" Canvas.Left="1480" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image x:Name="BB" Source="pack://application:,,,/Ressources/BB.png" Height="68" Width="70" Canvas.Top="782" Canvas.Left="1480" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <StackPanel Canvas.Left="1450" Canvas.Top="1041" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style x:Key="StreetButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Foreground" Value="#E8D4A0"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>

                    <Style x:Key="NavigationButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="#1B4D1B"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="BorderBrush" Value="#8B7355"/>
                        <Setter Property="BorderThickness" Value="1.5"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>

                    <Style x:Key="PlayButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                        <Setter Property="Background" Value="#2D5A2D"/>
                    </Style>
                    
                    <Style x:Key="RevealAllIconButtonStyle" TargetType="ToggleButton">
                        <Setter Property="Width" Value="44"/>
                        <Setter Property="Height" Value="44"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="border" Background="#FFEFEBE1" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8">
                                        <Image x:Name="Icon" Source="pack://application:,,,/Ressources/visible.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Icon" Property="Source" Value="pack://application:,,,/Ressources/visible.png"/>
                                        </Trigger>

                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter TargetName="Icon" Property="Source" Value="pack://application:,,,/Ressources/invisible.png"/>
                                        </Trigger>

                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.85"/>
                                        </Trigger>

                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Opacity" Value="0.65"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <Grid x:Name="GameStateControlGrid" Height="150" Width="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="PreflopButton" Content="Preflop" Style="{StaticResource StreetButtonStyle}" Command="{Binding PreflopCommand}" CommandParameter="{x:Static enums:StreetEnum.Preflop}"/>
                    <Button x:Name="FlopButton" Content="Flop"  Grid.Column="1" Style="{StaticResource StreetButtonStyle}" Command="{Binding FlopCommand}" CommandParameter="{x:Static enums:StreetEnum.Flop}"/>
                    <Button x:Name="TurnButton" Content="Turn" Grid.Column="2" Style="{StaticResource StreetButtonStyle}" Command="{Binding TurnCommand}" CommandParameter="{x:Static enums:StreetEnum.Turn}"/>
                    <Button x:Name="RiverButton" Content="River"  Grid.Column="3" Style="{StaticResource StreetButtonStyle}" Command="{Binding RiverCommand}" CommandParameter="{x:Static enums:StreetEnum.River}"/>
                    <Button x:Name="ShowdownButton" Content="Showdown" Grid.Column="4" Style="{StaticResource StreetButtonStyle}" Command="{Binding ShowdownCommand}" CommandParameter="{x:Static enums:StreetEnum.Showdown}"/>

                    <Button x:Name="PreviousStateButton" Content="⏮" Grid.Row="1" Grid.Column="0" Style="{StaticResource NavigationButtonStyle}" Command="{Binding PreviousStreetCommand}"/>
                    <Button x:Name="PreviousActionButton" Content="◀" Grid.Row="1" Grid.Column="1" Style="{StaticResource NavigationButtonStyle}" Command="{Binding PreviousActionCommand}"/>
                    <Button x:Name="PlayPauseButton" Content="▶" Grid.Row="1" Grid.Column="2" Style="{StaticResource PlayButtonStyle}" Visibility="Hidden"/>
                    <Button x:Name="NextActionButton" Content="▶" Grid.Row="1" Grid.Column="3" Style="{StaticResource NavigationButtonStyle}" Command="{Binding NextActionCommand}"/>
                    <Button x:Name="NextStateButton" Content="⏭" Grid.Row="1" Grid.Column="4" Style="{StaticResource NavigationButtonStyle}" Command="{Binding NextStreetCommand}"/>
                </Grid>

                <ToggleButton Style="{StaticResource RevealAllIconButtonStyle}" Command="{Binding RevealAll}" CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"/>
            </StackPanel>
        </Canvas>
    </Viewbox>
</Window>
