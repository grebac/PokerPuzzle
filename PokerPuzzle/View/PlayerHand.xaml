<UserControl x:Class="PokerPuzzle.View.PlayerHand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerPuzzle.View"
             xmlns:VM="clr-namespace:PokerPuzzle.VM"
             mc:Ignorable="d" 
             Width="300" Height="371"
             d:DataContext="{d:DesignInstance Type=VM:PlayerHandVM}">
    <Canvas Visibility="{Binding IsHidden}">
        <Image x:Name="Card1" Height="210" Width="149" Canvas.Left="77" Canvas.Top="65" Source="{Binding Card1Path, Mode=OneWay}"/>
        <Image x:Name="Card2" Height="210" Width="148" Canvas.Left="144" Canvas.Top="100" Source="{Binding Card2Path, Mode=OneWay}"/>
        <Image x:Name="Action" Width="169" Height="64" Canvas.Top="10" Canvas.Left="74" HorizontalAlignment="Left" VerticalAlignment="Center" Stretch="None" Source="{Binding ActionPath, Mode=OneWay, TargetNullValue={x:Null}}"/>


        <CheckBox x:Name="AreCardsVisibles" Content="Are Cards Visible?" Canvas.Left="44" Canvas.Top="313" Height="18" Width="120" IsChecked="{Binding AreCardsVisible}">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>
    </Canvas>
</UserControl>
