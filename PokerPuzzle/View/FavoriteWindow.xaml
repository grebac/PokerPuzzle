<Window x:Class="PokerPuzzle.View.FavoriteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerPuzzle.View"
        mc:Ignorable="d"
        Title="FavoriteWindow" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Your Favorite Poker Games" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Liste des favoris -->
        <DataGrid Grid.Row="1" 
                  x:Name="FavoritesGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  MouseDoubleClick="FavoritesGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Game Index" 
                                    Binding="{Binding GameIndex}" 
                                    Width="100"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Comment" 
                                    Binding="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Remove" 
                    Width="80" 
                    Margin="0,0,10,0"
                    Click="RemoveButton_Click"/>
            <Button Content="Close" 
                    Width="80" 
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
